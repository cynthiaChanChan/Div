page {
	width: 100%;
	height: 100%;
	background-color: #f9f9f9;
}

.wrapper {
	position: relative;
	height: 100%;
}

.allImgs {
	position: relative;
	height: 100%;
	overflow: auto;
	padding: 0 50rpx;
	background-color: #f9f9f9;
}

.allImgs .titleWrapper {
	background-color: #f9f9f9;
	text-align: center;
	font-size: 35rpx;
	color: #67bcdb;
}

.allImgs .titleWrapper .addImg {
	font-size: 30rpx;
	padding: 20rpx 0;
	margin-top: 30rpx;
	margin-bottom: 30rpx;
	background-color: #f0f0f0;
	color: #000000;
}

.allImgs .titleWrapper .addImg .add {
	width: 60rpx;
	margin-right: 20rpx;
	display: inline-block;
}

.allImgs .titleWrapper .addImg .imgInfo {
	display: inline-block;
}

.allImgs .titleWrapper .addImg .h3 {
	color: #999;
	font-size: 28rpx;
}

.allImgs .pics {
	margin-top: 30rpx;
	margin-bottom: 150rpx;
}

.allImgs .pics .picWrapper {
	position: relative;
}

.allImgs .pics .pic {
	display: block;
	margin: 20rpx auto;
	width: 100%;
}

.allImgs .pics .delete {
	width: 80rpx;
	height: 80rpx;
	position: absolute;
	top: 5px;
	right: 5px;
	border-radius: 50%;
	background-color: #f0f0f0;
	border: 4rpx solid #f0f0f0;
}
