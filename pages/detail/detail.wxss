page {
	width: 100%;
	height: 100%;
	background-color: #f9f9f9;
}

.wrapper {
	height: 100%;
}

.clear {
	border-radius: 10rpx;
	float: left;
	margin-left: 30rpx;
	border: 1px solid #67bcdb;
	padding: 15rpx 0;
	line-height: 1;
	width: 150rpx;
	text-align: center;
	font-size: 30rpx;
}

.wordNum {
	color: #67bcdb;
	font-size: 35rpx;
	text-align: right;
	margin: 0 30rpx 10rpx 0;
}

textarea {
	box-sizing: border-box;
	background-color: #fff;
	font-size: 30rpx;
	padding: 30rpx;
	width: 100%;
	height: 80%;
}

.button {
	width: 90%;
	line-height: 1;
	padding: 25rpx 0;
	color: #fff;
	margin: 30rpx auto;
	background-color: #ccc;
	text-align: center;
	font-size: 32rpx;
	border-radius: 10rpx;
	box-shadow: 2px 2px 8px rgba(0,0,0, .2);
}

.button.active {
	background-color: rgb(103,188,219);
}
