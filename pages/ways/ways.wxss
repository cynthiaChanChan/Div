page {
	width: 100%;
	height: 100%;
	background-color: #f9fafc;
}

.wrapper {
	height: 100%;
}

.custom .subTitle {
	text-align: center;
	font-size: 32rpx;
}

.custom .btns {
	padding: 30rpx 5%;
}

.custom .btns .btn {
	display: inline-block;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
	width: 40%;
	line-height: 1;
	padding: 15rpx 0;
	text-align: center;
	border: 1px solid #d1d1d1;
}

.custom .btns .btn.active {
	border-color:  #67bcdb;
}

.custom .btns .btn:nth-of-type(odd) {
	float: left;
	clear: both;
}

.custom .btns .btn:nth-of-type(even) {
	float: right;
}

.custom .btns image {
	width: 40rpx;
	margin-right: 10rpx;
	vertical-align: middle;
}

.custom .btns .span {
	font-size: 30rpx;

}

.edit {
	padding-top: 20rpx;
	line-height: 1;
	font-size: 30rpx;
	border-top: 4px solid #f0f0f0;
}

.edit .li {
	padding: 20rpx 5%;
	background-color: #f4f9fe;
	border-top: 1px dashed #d1d1d1;
	border-bottom: 1px dashed #d1d1d1;
	margin-bottom: 20rpx;
}

.edit .li .titleWrapper {
	position: relative;
}

.edit .li text {
	vertical-align: middle;
}

.edit .li .inputWrapper.titleInput{
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	transform: translateY(-50%);
	right: 60rpx;
	width: 68%;
}

.edit .li .inputWrapper.titleInput .input {
	width: 100%;
	padding-left: 10rpx;
	display: inline-block;
	vertical-align: middle;
	border: 1px solid #d1d1d1;
}

.edit .li .radios .inputWrapper.answerWrapper {
	float: right;
	margin-right: 60rpx;
    width: 68%;
}

.edit .li .radios .inputWrapper.answerWrapper .input.answer {
	width: 100%;
	padding-left: 10rpx;
	display: inline-block;
	vertical-align: middle;
	border: 1px solid #d1d1d1;
}

.edit .li .radios {
	position: relative;
	margin-top: 20rpx;
}

.edit .li .circle {
	position: absolute;
    left: 80rpx;
    top: 50%;
    -webkit-transform: translateY(-50%);
	width: 35rpx;
}

.edit .li .delete {
	width: 50rpx;
	position: absolute;
    right: 0;
    top: 50%;
    -webkit-transform: translateY(-50%);
}

.edit .li .add {
	margin-left: 80rpx;
	width: 50rpx;
}

.tip {
	text-align: center;
	font-size: 30rpx;
	color: #999;
}

.button {
	width: 90%;
	line-height: 1;
	padding: 25rpx 0;
	color: #fff;
	margin: 30rpx auto;
	background-color: #ccc;
	text-align: center;
	font-size: 32rpx;
	border-radius: 10rpx;
	box-shadow: 2px 2px 8px rgba(0,0,0, .2);
}

.button.active {
	background-color: rgb(103,188,219);
}
